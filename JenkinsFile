pipeline {
    agent any

    stages {
        stage('Repo Klonla') {
            steps {
                git 'https://github.com/FBmarko/YMGdersornek2.git'
            }
        }

        stage('Docker Image Olustur') {
            steps {
                bat 'docker build -t ymg-ders-test .'
            }
        }

        stage('Container Calistir') {
            steps {
                bat 'docker run --rm ymg-ders-test'
            }
        }
    }

    post {
        failure {
            echo "Pipeline basarisiz oldu"
        }
    }
}
